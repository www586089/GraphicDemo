<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zfang.graphicdemo.view.drag.DragSwapViewGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/picture_large"
            android:layout_width="0dp"
            android:layout_height="240dp"
            android:background="@drawable/shape_bg_editaccount_avatar"
            android:padding="6dp"
            android:tag="picture_large"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/image1"
            app:srcCompat="@drawable/editaccount_add" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:background="@drawable/shape_bg_editaccount_avatar"
            android:padding="6dp"
            android:tag="image1"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/picture_large"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/picture_large"
            app:srcCompat="@drawable/editaccount_add" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:background="@drawable/shape_bg_editaccount_avatar"
            android:padding="6dp"
            android:tag="image2"
            app:layout_constraintBottom_toBottomOf="@id/picture_large"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/picture_large"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/editaccount_add" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image3"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:background="@drawable/shape_bg_editaccount_avatar"
            android:padding="6dp"
            android:tag="image3"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/image4"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image2"
            app:srcCompat="@drawable/editaccount_add" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image4"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:background="@drawable/shape_bg_editaccount_avatar"
            android:padding="6dp"
            android:tag="image4"
            app:layout_constraintBottom_toBottomOf="@id/image3"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/image5"
            app:layout_constraintRight_toLeftOf="@id/image3"
            app:layout_constraintTop_toTopOf="@id/image3"
            app:srcCompat="@drawable/editaccount_add" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image5"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:background="@drawable/shape_bg_editaccount_avatar"
            android:padding="6dp"
            android:tag="image5"
            app:layout_constraintBottom_toBottomOf="@id/image3"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/image4"
            app:layout_constraintTop_toTopOf="@id/image3"
            app:srcCompat="@drawable/editaccount_add" />
    </com.zfang.graphicdemo.view.drag.DragSwapViewGroup>
</LinearLayout>