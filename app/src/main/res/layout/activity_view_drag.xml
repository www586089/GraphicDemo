<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MatrixActivity">

    <com.zfang.graphicdemo.view.drag.DragViewGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#4169E1"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/text_drag1_desc"
            android:textColor="@android:color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#556B2F"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/text_drag2_desc"
            android:textColor="@android:color/white" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#8B4513"
            android:elevation="2dp"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:text="@string/text_drag3_desc"
            android:textColor="@android:color/white" />
    </com.zfang.graphicdemo.view.drag.DragViewGroup>
</androidx.constraintlayout.widget.ConstraintLayout>